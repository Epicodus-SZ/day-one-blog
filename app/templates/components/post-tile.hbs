    <!-- A blog post -->
    <section class="post">
        <header class="post-header">
            <img width="48" height="48" class="post-avatar" src="{{post.imgurl}}">

            <h2 class="post-title">{{#link-to 'post' post.id}}{{post.title}}{{/link-to}}</h2>

            <p class="post-meta">
                By {{post.author}} (posted on {{post.timestamp}})
            </p>
        </header>

        <div class="post-text">
            <p>{{trim-string post.text}}...{{#link-to 'post' post.id}}link{{/link-to}}</p>
        </div>
    </section>
