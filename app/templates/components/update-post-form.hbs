<div class="col-lg-8">
  <div class="well bs-component">
    <form class="form-horizontal" {{action 'updatePost' model on="submit"}}>
      <fieldset>
        <legend>Update blog</legend>
        <div class="form-group">
          <label for="author" class="col-lg-2 control-label">Author</label>
          <div class="col-lg-5">
            {{input type="text" class="form-control" value=model.author}}
          </div>
        </div>
        <div class="form-group">
          <label for="inputTitle" class="col-lg-2 control-label">Title</label>
          <div class="col-lg-5">
            {{input type="text" class="form-control" id="inputTitle" value=model.title}}
          </div>
        </div>
        <div class="form-group">
          <label for="inputText" class="col-lg-2 control-label">Text</label>
          <div class="col-lg-10">
            {{textarea rows="3" class="form-control" id="inputText" value=model.text}}
          </div>
        </div>
        <div class="form-group">
          <label for="inputImageUrl" class="col-lg-2 control-label">Image link</label>
          <div class="col-lg-10">
            {{input class="form-control" id="inputImageUrl" value=model.imgurl}}
          </div>
        </div>
        <div class="form-group">
          <label for="inputTimestamp" class="col-lg-2 control-label">Date</label>
          <div class="col-lg-10">
            {{input value=model.timestamp class="form-control" id="inputTimestamp"}}
          </div>
        </div>
        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button class="btn btn-primary">Update</button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
